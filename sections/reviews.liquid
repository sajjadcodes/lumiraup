<div class="lumira-reviews-section">
  <div class="lumira-reviews-container">

    {% if section.settings.heading != blank %}
      <h2 class="lumira-reviews-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="lumira-reviews-grid">
      {% for block in section.blocks %}
        <div class="lumira-review-card" {{ block.shopify_attributes }}>
          <div class="lumira-review-rating">
            {% for i in (1..block.settings.stars) %}
              â˜…
            {% endfor %}
          </div>

          <p class="lumira-review-text">{{ block.settings.review_text }}</p>

          <div class="lumira-review-author">
            <span>{{ block.settings.author }}</span>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</div>

{{ 'section-reviews.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-reviews.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Lumira Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    }
  ],

  "blocks": [
    {
      "type": "review",
      "name": "Review Item",
      "settings": [
        {
          "type": "range",
          "id": "stars",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "Amazing product! Highly recommended."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Reviewer Name",
          "default": "John Doe"
        }
      ]
    }
  ],

  "max_blocks": 6,
  "presets": [
    {
      "name": "Lumira Reviews",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}
